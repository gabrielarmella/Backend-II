<body>
  <header class="header">
    <div class="container">
      <a href="/products" class="logo-link"><h1 class="logo">Coder Steam</h1></a>
      <nav class="nav">
        <ul>
          <li><a href="/products">Inicio</a></li>
          <li><a href="/products">Productos</a></li>
          <li><a href="/about">Acerca de</a></li>
          <li><a href="/contact">Contacto</a></li>
          <li><a href="/profile"><i class="fas fa-user"></i> </a></li>
          <li><a href="/cart"><i class="fas fa-shopping-cart"></i> </a></li>
        </ul>
      </nav>
    </div>
  </header>
  <main class="main-content">
    <div class="container">
      <h1>Lista de Productos</h1>
      <div class="products-box">
        {{#each products}}
          <div class="product-card">
            <a href="/products/{{this.id}}" class="product-card-link">
              <img src="{{this.thumbnails.[0]}}" alt="{{this.title}}" class="product-image">
              <h3>{{this.title}}</h3>
              <p>Precio: ${{this.price}}</p>
              <p>Categor√≠a: {{this.category}}</p>
              <p>Stock: {{this.stock}}</p>
            </a>
            <button class="btn-cart" onclick="addToCart('{{this._id}}')"></button>
            <button class="btn-buy">Comprar</button>
          </div>
        {{/each}}
      </div>
  </main>
  <footer class="footer">
    <div class="container">
      <p>&copy; 2025 Coder Steam. Todos los derechos reservados.</p>
    </div>
  </footer>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>
</body>